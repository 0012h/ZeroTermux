<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_r_3dp_161823_left"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="wrap_content">



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="390dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">


          <TextView
              android:layout_width="wrap_content"
              android:textSize="15sp"
              android:textStyle="bold"
              android:id="@+id/service_name"
              android:textColor="@color/color_ffffff"
              android:text="@string/ZeroTermux实验功能"
              android:layout_height="wrap_content"/>



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">


              <androidx.cardview.widget.CardView
                  android:layout_width="95dp"
                  android:layout_marginLeft="5dp"
                  android:paddingTop="5dp"
                  android:layout_marginTop="10dp"
                  android:paddingBottom="5dp"
                  android:layout_marginRight="5dp"
                  app:cardElevation="0dp"
                  app:cardBackgroundColor="@color/color_55000000"
                  app:cardCornerRadius="3dp"
                  android:layout_height="90dp">



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="match_parent">


                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">


                          <LinearLayout
                              android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:id="@+id/adb_root"
                              android:gravity="center"
                              android:layout_height="match_parent">

                              <ImageView
                                  android:layout_width="40dp"
                                  android:src="@mipmap/adb_root"
                                  android:layout_height="40dp"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginBottom="5dp"
                                  android:padding="2dp"
                                  android:paddingLeft="10dp"
                                  android:textStyle="bold"
                                  android:paddingTop="10dp"
                                  android:paddingBottom="10dp"
                                  android:text="@string/网络ADB"
                                  android:layout_alignParentRight="true"
                                  android:textColor="@color/color_ffffff"
                                  android:textSize="10sp" />


                          </LinearLayout>



                      </RelativeLayout>


                  </LinearLayout>



              </androidx.cardview.widget.CardView>


              <androidx.cardview.widget.CardView
                  android:layout_width="95dp"
                  android:layout_marginLeft="5dp"
                  android:paddingTop="5dp"
                  android:layout_marginTop="10dp"
                  android:visibility="visible"
                  android:paddingBottom="5dp"
                  android:layout_marginRight="5dp"
                  app:cardElevation="0dp"
                  app:cardBackgroundColor="@color/color_55000000"
                  app:cardCornerRadius="3dp"
                  android:layout_height="90dp">



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="match_parent">


                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">


                          <LinearLayout
                              android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:id="@+id/adb_root_close"
                              android:gravity="center"
                              android:layout_height="match_parent">

                              <ImageView
                                  android:layout_width="40dp"
                                  android:src="@mipmap/adb_root"
                                  android:layout_height="40dp"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginBottom="5dp"
                                  android:padding="2dp"
                                  android:paddingLeft="10dp"
                                  android:textStyle="bold"
                                  android:paddingTop="10dp"
                                  android:paddingBottom="10dp"
                                  android:text="@string/网络ADBClose"
                                  android:layout_alignParentRight="true"
                                  android:textColor="@color/color_ffffff"
                                  android:textSize="10sp" />


                          </LinearLayout>



                      </RelativeLayout>


                  </LinearLayout>



              </androidx.cardview.widget.CardView>







          </LinearLayout>




      </LinearLayout>


   </RelativeLayout>




</LinearLayout>
