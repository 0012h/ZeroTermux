<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shape_r_3dp_161823_2e"
    android:alpha="0.8"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/title_ftp"
        android:textStyle="bold"
        android:textColor="@color/color_ffffff"
        android:text="ADB CONNECT"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/adb_command"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/adb_command"
            android:layout_height="30dp"/>

        <EditText
            android:id="@+id/pairing_code"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/shape_r_3dp_161823_2e_2dp"
            android:layout_height="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/adb_tool"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/adb_tool"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/port_number"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/shape_r_3dp_161823_2e_2dp"
            android:layout_height="45dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/确定"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/shape_btn_2e84e6"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/取消"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp"
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/shape_btn_2e84e6"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
